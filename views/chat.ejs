function get_data(user_id){
    var user_id = user_id;
    $.ajax({
                  type: "POST",
                  url: '/api/get_chat_data',
                  data: JSON.stringify({username: "<%= Bingo.user %>",sender:user_id}),
                  success: function(res){
                    //console.log('chat data'+ res.data);
                    res.data.reverse();
                    var chat_data = '';
